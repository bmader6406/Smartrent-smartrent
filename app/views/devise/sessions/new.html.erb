<% if resource_name.to_s == "resident" %>
<div class="member clearfix">
  <div class="memberLeft">
    <%= image_tag "smartrent21.jpg" %>
</div>

  <div class="memberRight">
    <div class="title">
      Log-In
    </div>

    <div class="message"></div>

    <div class="loginForm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
      </div>

      <div class="actions">
        <%= f.submit "Go", {:class => "btn btn-primary btn-sm"} %>
      </div>
    <% end %>
    </div>
    <div class="formInstructions">
      <p>First time users will need to activate their account.<br>
      Enter your email address above and click the Go button.</p>
    </div>

      <%= render "devise/shared/links" %>
  </div>
</div>
<% else %>
    <div class="loginForm">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true , :class => "form-control"%>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control"  %>
      </div>

      <div class="actions">
        <%= f.submit "Go", {:class => "btn btn-primary btn-sm"} %>
      </div>
    <% end %>
    </div>
      <%= render "devise/shared/links" %>
<% end %>
