<h1>Listing Residents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Apartment</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>

<% @residents.each do |resident| %>
  <tr>
    <td><%= resident.name %></td>
    <td><%= resident.email %></td>
    <td><%= resident.apartment %></td>
    <td><%= resident.status %></td>
    <td><%= link_to 'Show', admin_resident %> | <%= link_to 'Edit', edit_admin_resident_path(admin_resident) %> | <%= link_to 'Destroy', admin_resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

