<% content_for(:ui_west) do %>
  <div>
    search form
  </div>
<% end %>

<% content_for(:ui_center) do %>
  <div class="listing">
    <div class="links pull-right">
      <%= link_to 'Add Property', new_admin_resident_property_path(:resident_id => @resident.id), :class => "btn btn-primary" %>
    </div>
    <h3>Listing resident_properties</h3>

    <% if @resident_properties.present? %>
      <table class="table">
        <tr>
          <th>Property Name</th>
          <th>House Hold Size</th>
          <th>Pets Count</th>
          <th>Contract Signing Date</th>
          <th>Status</th>
          <th>Move In Date</th>
          <th>Move Out Date</th>
          <th>Created At</th>
          <th width="160px">Actions</th>
        </tr>
        <% @resident_resident_properties.each do |resident_property| %>
          <% property = resident_property.property %>
          <tr>
            <td><%= link_to property.name, admin_property_path(property) %></td>
            <td><%= resident_property.house_hold_size %></td>
            <td><%= resident_property.pets_count %></td>
            <td><%= resident_property.contract_signing_date %></td>
            <td><%= resident_property.status %></td>
            <td><%= resident_property.move_in_date %></td>
            <td><%= resident_property.move_out_date %></td>
            <td><%= resident_property.created_at %></td>
            <td><%= link_to 'Show', admin_resident_property_path(resident_property) %> | <%= link_to 'Edit', edit_admin_resident_property_path(resident_property) %> | <%= link_to 'Destroy', admin_resident_property_path(resident_property), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
      <div class="paging-info">
        <%= page_entries_info @resident_properties %>
        <%= page_navigation_links @resident_properties %>
      </div>
    <% elsif @search == "1" %>
      <div class="alert alert-warning">No resident_properties found</div>
    <% else %>
      <div class="alert alert-warning">No resident_properties have been added yet.</div>
    <% end %>
  </div>
<% end %>


<script type="text/javascript">
  $(function(){
    App.initPageLayout();
  });
</script>