<div id="resident-search">
  <h3>Resident Search</h3>
  <%= form_tag({}, {:method => "get"}) do %>
    <div class="form-group">
      <%= text_field_tag :_id, params[:_id], :class => "form-control", :placeholder => "ID" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :name, params[:name], :class => "form-control", :placeholder => "Name" %>
    </div>
    <div class="form-group">
      <%= select_tag :status, options_for_select(Smartrent::Resident.smartrent_statuses.collect{|key,value| [value, key]}, params[:status]), {:include_blank => "--Select Status--", :class => "form-control"}%>
    </div>
    <div class="form-group">
      <%= text_field_tag :email, params[:email], :class => "form-control", :placeholder => "Email" %>
    </div>
    <%= hidden_field_tag "search", "1" %>
    <%= submit_tag "Search", :class => "btn btn-default btn-block search" %>
  <% end %>
</div>
