<%= form_for([:admin, @home, @more_home], html: {:class => "form-horizontal"}) do |f| %>
  <%= render "layouts/error_messages", :target => @more_home %>
  <fieldset>
    <% if @home.updated_by == "xml_feed" %>
      <div class="field">
        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-7">
            <div class="well well-sm">
              Some of the fields (which is disabled) in this form are being automatically updated by the Bozzuto.com XML feed.

              <br><br>
              The following fields can be edited and will not be replaced by the XML feed: <br>
              - Position <br>
              - Featured <br>
              - Is Visible <br>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="field">
      <div class="form-group">
        <%= f.label :name, :class => "col-md-4 control-label" %>
        <div class="col-md-7">
          <%= f.text_field :name, :class => "form-control", :disabled => true %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= f.label :beds, :class => "col-md-4 control-label" %>
        <div class="col-md-7">
          <%= f.number_field :beds, :class => "form-control", :disabled => true %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= f.label :baths, :class => "col-md-4 control-label" %>
        <div class="col-md-7">
          <%= f.text_field :baths, :class => "form-control", :disabled => true %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= f.label :sq_ft, :class => "col-md-4 control-label" %>
        <div class="col-md-7">
          <%= f.text_field :sq_ft, :class => "form-control", :disabled => true %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= f.label :featured, :class => "col-md-4 control-label" %>
        <div class="col-md-7" style="margin-top:5px;">
          <%= f.check_box :featured %> Yes
        </div>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= f.label :floor_plan_images, :class => "col-md-4 control-label" %>
        <div class="col-md-7">
          <%= f.fields_for :floor_plan_images do |builder| %>
            <div>
              <%= builder.file_field :image, :class => "control-label", :disabled => true %>
              <%= builder.check_box :_destroy, :disabled => true %>
              <%= builder.label :_destroy, "Remove Image", :class => "control-label" %>
              
              <p class="help-block"> Image should be 300x720 pixels and smaller than 10MB. GIF, JPG, PNG</p>
              <% if builder.object.image && builder.object.image.url %>
                <br><img src="<%= builder.object.image.url %>" width="100px" />
              <% end %>
              <hr/>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :position, :class => "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.number_field :position, :class => "form-control" %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= f.label :is_visible, :class => "col-md-4 control-label" %>
        <div class="col-md-7" style="margin-top:5px;">
          <%= f.check_box :is_visible %> Yes
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="singlebutton"></label>
      <div class="col-md-7">
        <%= f.submit :class => "btn btn-primary" %>
        <%= link_to 'Cancel', admin_home_more_homes_path(@home), :class => "btn btn-default" %>
      </div>
    </div>
  </fieldset>
<% end %>
