<%= form_for([:admin, @admin_feature], html: {:class => "form-horizontal"}) do |f| %>
  <% if @admin_feature.errors.any? %>
    <%= render partial: "shared/form_errors", :locals => {:errors => @admin_feature.errors} %>
  <% end %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, :class => "col-md-2 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :name, :class => "form-control input-md" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label" for="singlebutton"></label>
      <div class="col-md-4">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
