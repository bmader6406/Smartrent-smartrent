<h3>Filter Features</h3>
<%= form_tag({}, {:method => "get", :class => "form-horizontal"}) do %>
  <fieldset>
    <div class="field">
      <div class="form-group">
        <%= label_tag "", "ID", :class => "col-md-1 control-label" %>
        <div class="col-md-2">
          <%= text_field_tag :_id, params[:_id], :class => "form-control input-md" %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= label_tag "", :name, :class => "col-md-1 control-label" %>
        <div class="col-md-2">
          <%= text_field_tag :name, params[:name], :class => "form-control input-md" %>
        </div>
      </div>
    </div>
    <%= hidden_field_tag "search", "1" %>
    <div class="form-group">
      <label class="col-md-1 control-label" for="singlebutton"></label>
      <div class="col-md-2">
        <%= submit_tag "Filter", :class => "btn btn-primary" %>
      </div>
    </div>
    </fieldset>
<% end %>
