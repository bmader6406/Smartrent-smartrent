<h1>Listing homes</h1>
<div class="links pull-right">
  <%= link_to 'Import Homes', import_admin_homes_path, :class => "btn btn-default" %>
  <%= link_to 'New Home', new_admin_home_path, :class => "btn btn-primary" %>
</div>
<br />
<br />
<%= render partial: "filter_form" %>
<br />
<% if @homes.present? %>
  <table class="table">
    <tr>
      <th>Title</th>
      <th>Short Description</th>
      <th>Url</th>
      <th>Actions</th>
    </tr>
  <% @homes.each do |home| %>
    <tr>
      <td><%= home.title %></td>
      <td><%= home.home_page_desc %></td>
      <td><%= link_to(home.url, home.url, :target => "_blank") if home.url  %></td>
      <td><%= link_to 'Show', admin_home_path(home) %> | <%= link_to 'Edit', edit_admin_home_path(home) %> | <%= link_to 'Destroy', admin_home_path(home), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
<% elsif @search == "1" %>
  <div class="alert alert-warning">No Homes found</div>
  <%= will_paginate @homes, renderer: BootstrapPagination::Rails %>
<% else %>
  <div class="alert alert-warning">No homes have been added yet.</div>
<% end %>
