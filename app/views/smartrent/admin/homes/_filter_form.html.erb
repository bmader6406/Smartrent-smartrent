<div id="home-search">
  <h3>Home Search</h3>
  <%= form_tag({}, {:method => "get"}) do %>
    <div class="form-group">
      <%= text_field_tag :_id, params[:_id], :class => "form-control", :placeholder => "ID" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :title, params[:title], :class => "form-control", :placeholder => "Title" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :phone_number, params[:phone_number], :class => "form-control", :placeholder => "Phone Number" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :state, params[:state], :class => "form-control", :placeholder => "State" %>
    </div>
    <%= hidden_field_tag "search", "1" %>
    <%= submit_tag "Search", :class => "btn btn-default btn-block search" %>
  <% end %>
</div>
