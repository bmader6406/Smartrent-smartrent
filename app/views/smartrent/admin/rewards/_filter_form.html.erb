<div id="reward-search">
  <h3>Reward Search</h3>
  <%= form_tag({}, {:method => "get"}) do %>
    <div class="form-group">
      <%= text_field_tag :_id, params[:_id], :class => "form-control", :placeholder => "ID" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :resident_id, params[:resident_id], :class => "form-control", :placeholder => "Resident ID" %>
    </div>
    <div class="form-group">
      <%= select_tag :property_id, options_for_select(Property.smartrent.order("name asc").all.collect{|p| [p.name, p.id]}, params[:property_id]), {:include_blank => "--Select Property--", :class => "form-control"}%>
    </div>
    <div class="form-group">
      <%= select_tag :type_, options_for_select(Smartrent::Reward.types.collect{|key,value| [value, key]}, params[:type_]), {:include_blank => "--Select Type--", :class => "form-control"}%>
    </div>
    <% if false %>
      <div class="form-group">
        <%= label_tag "", "Period Start", :class => "col-md-4 control-label" %>
        <%= date_select "", :period_start, :selected => params[:period_start], include_blank: true, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "", "Period End", :class => "col-md-4 control-label" %>
        <%= date_select "", :period_end, :selected => params[:period_end], include_blank: true, :class => "form-control" %>
      </div>
    <% end %>
    
    <%= hidden_field_tag "search", "1" %>
    <%= submit_tag "Search", :class => "btn btn-default btn-block search" %>
  <% end %>
</div>
