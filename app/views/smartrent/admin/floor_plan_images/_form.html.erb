<%= form_for([:admin, @floor_plan_image], html: {:class => "form-horizontal"}) do |f| %>
  <%= render "layouts/error_messages", :target => @floor_plan_image %>
  <fieldset>
    <div class="form-group">
      <%= f.label :image, :class => "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.file_field :image %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :caption, :class => "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_field :caption, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :more_home_id, :class => "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.collection_select :more_home_id, Smartrent::MoreHome.order("name asc").all, :id, :name, {:include_blank => "--Select Home--"}, {:class => "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="singlebutton"></label>
      <div class="col-md-7">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
