<% if @home.updated_by == "xml_feed" %>
  <div class="well well-sm">
    This floor plan image is updated by BHI XML feed, the changes you make here will be overridden by the feed
    <br>
    <small>
      You can edit following fields:
      Caption
    </small>
  </div>
<% end %>

<%= form_for([:admin, @home, @more_home, @floor_plan_image], html: {:class => "form-horizontal"}) do |f| %>
  <%= render "layouts/error_messages", :target => @floor_plan_image %>
  <fieldset>
    <div class="form-group">
      <%= f.label :image, :class => "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.file_field :image %>
        <p class="help-block"> Image should be 300x720 pixels and smaller than 10MB. GIF, JPG, PNG</p>
        <% if f.object.image && f.object.image.url %>
          <br><img src="<%= f.object.image.url %>" width="160px" />
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :caption, :class => "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_field :caption, :class => "form-control" %>
      </div>
    </div>
    <div class="field">
      <div class="form-group">
        <%= f.label :is_visible, :class => "col-md-4 control-label" %>
        <div class="col-md-7" style="margin-top:5px;">
          <%= f.check_box :is_visible %> Yes
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="singlebutton"></label>
      <div class="col-md-7">
        <%= f.submit :class => "btn btn-primary" %>
        <%= link_to 'Cancel', admin_home_more_home_floor_plan_images_path(@home, @more_home), :class => "btn btn-default" %>
      </div>
    </div>
  </fieldset>
<% end %>
