<%= render layout: "layout" do %>
<p id="notice"><%= notice %></p>
  <div class="propDetails clearfix">
    <div class="propPhoto">
      <%= image_tag @property.image %>
      <div>
        <%= @property.image_description %>
      </div>
    </div>

    <div class="details">
      <h1><%= @property.title %></h1>

      <div class="address">
        <%= @property.address %>, <%= @property.city %>, <%= @property.state %>
      </div>
      <div class="links">
        <% if @property.website.present? %>
          <%= link_to "Visit the Website", @property.website %>
        <% end %>
        <% if @property.video_url.present? %>
          <br /><%= link_to "View Community Video", @property.video_url, :target => "_blank" %>
        <% end %>
      </div>

      <div class="desc">
        <%= @property.description.html_safe %>
      </div>
      <% if @property.homes.present? %>
        <% homes = @property.homes  %>
        <div class="homes">
        <div class="title">Homes</div>
          <%= render partial: "homes_table", :locals => {:homes => homes} %>
        </div>
        <div class="fpImageHolder">
          <%= render partial: "home_floor_plan_images", :collection => homes, :as => :home  %>
          <div class="clear"></div>
        </div>
        <% featured_home = homes.where(:featured => true).first %>
        <% if featured_home %>
          <div class="featuredHome">
            <div class="title">
              Featured Home
            </div>
            <%= render partial: "featured_home_table", :locals => {:home => featured_home} %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end%>
