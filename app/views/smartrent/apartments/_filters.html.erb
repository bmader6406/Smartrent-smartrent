    <%= search_form_for @q do |f|%>
      <div class="searchTitle">
        <h1>Search By</h1>
      </div>

      <div class="searchBedrooms modern-checkbox">
        <div class="searchCategory">
          Bedrooms
        </div>

        <ul>
          <li>
            <%= f.check_box :studio_present %>
            <label for="q_studio_present">Studios</label>
