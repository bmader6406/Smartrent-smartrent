            <option value="4000">
              $4,000
            </option>

            <option value="5000">
              $5,000
            </option>

            <option value="6000">
              $6,000
            </option>

            <option value="7000">
              $7,000
            </option>

            <option value="8000">
              $8,000
            </option>

            <option value="9000">
              $9,000
            </option>

            <option value="10000">
              $10,000
            </option>
          </select></label></li>

          <li style="list-style: none"><label for="fourbed"></label></li>

          <li><label for="fourbed"><select class="selectpicker" id="max_price" name="max_price" onchange="selectResults();">
            <option value="">
              Choose Maximum...
            </option>

            <option value="750">
              $750
            </option>

            <option value="1000">
              $1,000
            </option>

            <option value="1250">
              $1,250
