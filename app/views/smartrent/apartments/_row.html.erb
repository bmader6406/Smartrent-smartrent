<div class="location">
  <% state_formatted = state.gsub(" ", "_") %>
  <div class="stateBox" id="state<%= state_formatted %>" onclick="Apartment.showState('<%= state %>')" style="background: url() 0% 0% repeat-x rgb(215, 218, 221);">
    <div class="state">
      <%= state %>
    </div>

    <div class="resultTotal">
      <%= apartment["count"] %>
    </div>

    <div class="plusMinus" id="plusMinus<%= state_formatted %>" style="font-size: 2em; background: url() 0% 0% repeat-x rgb(223, 225, 228);">
      +
    </div>

    <div class="clear"></div>
  </div>

  <div class="cities" id="cities<%= state_formatted %>">
    <div class="title" onclick="Apartment.toggleCities('<%= state %>');">
      <div class="text">
        Cities
      </div>

      <div class="cPlusMinus" id="citiesPlusMinus<%= state_formatted %>" style="font-size: 2em;">
        -
      </div>
      <div class="clear"></div>
    </div>
    <ul id="citiesList<%= state_formatted %>" style="display: table;">
      <% apartment["cities"].each do |city, count| %>
        <li>
          <a href="javascript:Apartment.cities('<%= state %>','<%= city %>')"><%= city %></a>
          <div class="count">
            <%= count %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="counties" id="counties<%= state_formatted %>">
    <div class="title" onclick="Apartment.toggleCounties('<%= state %>');">
      <div class="text">
        Counties
      </div>

      <div class="cPlusMinus" id="countiesPlusMinus<%= state_formatted %>" style="font-size: 2em;">
        -
      </div>

      <div class="clear"></div>
    </div>

    <ul id="countiesList<%= state_formatted %>" style="display: table;">
      <% apartment["counties"].each do |county, count| %>
        <li>
        <a href="javascript:Apartment.counties('<%= state_formatted %>','<%= county %>');"><%= county %></a>
          <div class="count">
            <%= count %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="results hidden" id="results-<%= state %>">
  <% apartment["apartments"].each do |apartment_| %>
  <div class="propertyListing">
    <div class="photo">
      <%= image_tag apartment_.image(:search_page) %>
    </div>
    <div class="info">
      <h3>
        <%= link_to apartment_.title, apartment_.detail_url, :target => "_blank" %>
      </h3>

      <p><%= apartment_.address %>, <%= apartment_.city %>, <%= apartment_.state %><br>
      <%= apartment_.phone_number %></p>

      <ul class="fp">
        <% if apartment_.studio %>
          <li><span class="bold">Studio</span> from <%= number_to_currency apartment_.studio_price %></li>
        <% end %>

        <% if apartment_.one_bedroom %>
          <li><span class="bold">1 Bedroom</span> from <%= number_to_currency apartment_.one_bedroom_price %></li>
        <% end%>

        <% if apartment_.two_bedroom %>
          <li><span class="bold">2 Bedrooms</span> from <%= number_to_currency apartment_.two_bedroom_price %></li>
        <% end%>
        <% if apartment_.three_bedroom %>
          <li><span class="bold">3 Bedrooms</span> from <%= number_to_currency apartment_.three_bedroom_price %></li>
        <% end%>
        <% if apartment_.four_bedroom %>
          <li><span class="bold">4 Bedrooms or more</span> from <%= number_to_currency apartment_.four_bedroom_price %></li>
        <% end %>
        <% if apartment_.penthouse %>
          <li><span class="bold">Penthouses</span> from <%= number_to_currency apartment_.pent_house_price %></li>
        <% end %>
      </ul>

      <ul class="desc">
        <li><%= apartment_.short_description %></li>
      </ul>
    </div>

    <div class="learnMore">
      <h3><%= link_to "Learn More",  apartment_.detail_url, :target => "_blank" %></h3>
    </div>

    <div class="clear"></div>
  </div>
  <% end %>
</div>
