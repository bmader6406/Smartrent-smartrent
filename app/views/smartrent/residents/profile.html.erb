<div class="member clearfix">
  <div class="memberLeft profileLeft">
    <%= image_tag "profileLeft.jpg" %>
  </div>

  <div class="memberRight profile">
    <div class="info">
      <h2>Member Profile</h2>
      <div class="label">
        Name
      </div>
      <div class="value">
        <%= @resident.name %>
      </div>
      <div class="label">
        Address
      </div>
      <div class="value">
        <%= @resident.address %>
      </div>
      <div class="label">
        City
      </div>
      <div class="value">
        <%= @resident.city %>
      </div>
      <div class="label">
        State
      </div>
      <div class="value">
        <%= @resident.state %>
      </div>
      <div class="label">
        Zip
      </div>
      <div class="value">
        <%= @resident.zip %>
      </div>
      <div class="label">
        Email
      </div>
      <div class="value">
        <%= @resident.email %>
      </div>
    </div>

    <div class="community">
      <h3>Current Community</h3>

      <div class="property">
        <%= @resident.current_community %>
      </div>
    </div>
  </div>
</div>
