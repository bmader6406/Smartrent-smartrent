<div class="member clearfix">
  <div class="memberStatementLeft">
    <div class="saveTitle">
      <span class="lightBlue"><%= @resident.name %>,</span> You have <span class="lightBlue"><%= number_to_currency @resident.balance, :precision => 0 %></span> Saved.
    </div>

    <div class="saveSubTitle">
      Wow, that's pretty good. Here's what you can do with it.
    </div>

    <div class="video">
      <%= image_tag "Member-Statement-638x426.jpg" %>
    </div>

    <div id="contentWrapper">
      <div class="fixedWidth">
        <%= render partial: "smartrent/pages/homes_slider" %>
      </div>
    </div>
  </div>

  <div class="memberStatementRight">
    <h2>Member Profile</h2>

    <div class="name">
      <%= @resident.name %>
    </div>

    <div class="movein">
      <% if @resident.first_move_in %>
        <span class="label">First Move-In Date:</span> <%= @resident.first_move_in.to_s(:short_date) %>
      <% end %>
    </div>

    <h2>Earned Rewards</h2>

    <h3>Current Community</h3>

    <div class="community">
      <%= @resident.current_community %><br>
    </div>

    <h3>Monthly Awards Amount</h3>

    <div class="v">
      <%= number_to_currency (@resident.monthly_awards_amount + @resident.initial_reward), :precision => 0 %>
    </div>

    <h3>Months Earned</h3>

    <div class="v">
      <%= @resident.total_months %>
    </div>

    <h3>Total Earned</h3>

    <div class="v">
      <%= number_to_currency @resident.balance, :precision => 0 %>
    </div>

    <h3>Sign-Up Bonus</h3>

    <div class="v">
      <%= number_to_currency @resident.sign_up_bonus, :precision => 0 %>
    </div>

    <h3>Combined Total</h3>

    <div class="v total">
      <%= number_to_currency @resident.balance, :precision => 0 %>
    </div>
  </div>
</div>
<div class="clearfix"></div>
