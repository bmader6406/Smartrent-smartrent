<h1>Listing homes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Beds</th>
    <th>Baths</th>
    <th>Sq ft</th>
    <th>Featured</th>
    <th>Property</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @homes.each do |home| %>
  <tr>
    <td><%= home.name %></td>
    <td><%= home.beds %></td>
    <td><%= home.baths %></td>
    <td><%= home.sq_ft %></td>
    <td><%= home.featured %></td>
    <td><%= home.property_id %></td>
    <td><%= link_to 'Show', home %></td>
    <td><%= link_to 'Edit', edit_home_path(home) %></td>
    <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

